<% layout("/layouts/boilarplate.ejs") %>
<link rel="stylesheet" href="/css/log&signup.css" >

<div class="row mt-5">
    <h1 class="col-6 offset-3 mb-3">SignUp on AirBnb</h1>
    <div class="col-6 offset-3 signup-form">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-2 mt-4 username">
                <label for="username" class="form-label">Username :</label>
                <input name="username" type="text" class="form-control username-signup-box" id="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2 email">
                <label for="email" class="form-label">Email :</label>
                <input name="email" type="email" class="form-control email-signup-box" id="email" required>
            </div>
            <div class="mb-2 password">
                <label for="password" class="form-label">Password :</label>
                <input name="password" type="password" class="form-control password-signup-box" id="password" required>
            </div>
            <button class="btn btn-success mt-3">Signup</button>
        </form>
    </div>
</div><br><br><br><br><br><br><br><br><br><br>